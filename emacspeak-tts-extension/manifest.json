{
  "name": "Emacspeak TTS Extension",
  "version": "1.0",
  "description": "This extension enables Chrome to speak using a local Emacspeak server.",
  "background_page": "tts_extension.html",
  "permissions": [ "experimental" ],
  "tts": {
    "voices": [
      {
        "voiceName": "Emacspeak English",
        "locale": "en-US",
        "gender": "male"
      }
    ]
  },
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Emacspeak English",
        "lang": "en-US",
        "gender": "male",
	"event_types": ["error"]
      }
    ]
  }
}
